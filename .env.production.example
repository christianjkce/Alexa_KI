# Domain / TLS
APP_HOST=alexa.example.com
ACME_EMAIL=admin@example.com

# App
PORT=3000
APP_HOST_INTERNAL=app

# Alexa OAuth
ALEXA_CLIENT_ID=prod-alexa-client-id
ALEXA_CLIENT_SECRET=prod-alexa-client-secret
ALEXA_REDIRECT_URI=
ALEXA_REDIRECT_URIS=

# Crok
CROK_API_BASE=https://api.crok.google.com
CROK_API_KEY=prod-crok-api-key
CROK_CLIENT_ID=prod-crok-client-id
CROK_CLIENT_SECRET=prod-crok-client-secret
CROK_STATUS_PATH=/status
CROK_ACTION_PATH=/action
CROK_REQUEST_TIMEOUT_MS=5000

# Session/Admin
SESSION_SECRET=generate-a-strong-secret
ADMIN_DEFAULT_USER=admin
ADMIN_PASS=<redacted>
TOKEN_STORE_PATH=./data/token-store.json

# Tests nur lokal, Prod auf false
DISABLE_ALEXA_SIGNATURE_VALIDATION=false

# Database (currently unused by the app, but required by docker-compose)
POSTGRES_USER=alexa
POSTGRES_PASSWORD=please-change
POSTGRES_DB=alexa

# Straico
STRAICO_API_KEY=
STRAICO_API_BASE=https://api.straico.com
STRAICO_CHAT_PATH=/v2/chat/completions

# Perplexity Web Search
PERPLEXITY_API_KEY=
PERPLEXITY_API_BASE=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar
PERPLEXITY_TIMEOUT_MS=2600
PERPLEXITY_MAX_TOKENS=220
