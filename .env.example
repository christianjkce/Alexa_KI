# Server
PORT=3000
APP_HOST=localhost
ACME_EMAIL=admin@example.com

# Admin UI
ADMIN_DEFAULT_USER=admin
ADMIN_PASS=<redacted>
SESSION_SECRET=replace-with-random-string

# Alexa OAuth
ALEXA_CLIENT_ID=your-alexa-client-id
ALEXA_CLIENT_SECRET=your-alexa-client-secret
ALEXA_CLIENT_ID_ALT=
ALEXA_CLIENT_SECRET_ALT=
ALEXA_REDIRECT_URI=http://localhost:3000/dev-callback
# Kommagetrennte Liste aller von der Alexa Developer Console bereitgestellten Redirect-URIs
ALEXA_REDIRECT_URIS=https://pitangui.amazon.com/api/skill/link/<skill-id>,https://layla.amazon.com/api/skill/link/<skill-id>

# Crok API
CROK_API_BASE=https://api.crok.google.com
CROK_STATUS_PATH=/status
CROK_ACTION_PATH=/action
CROK_API_KEY=your-crok-api-key
CROK_CLIENT_ID=your-crok-client-id
CROK_CLIENT_SECRET=your-crok-client-secret
CROK_REQUEST_TIMEOUT_MS=5000
ALLOW_USER_API_KEY=0

# Token-Store Pfad (optional)
TOKEN_STORE_PATH=./data/token-store.json

# Testing
DISABLE_ALEXA_SIGNATURE_VALIDATION=0

# Postgres (docker-compose)
POSTGRES_USER=alexa
POSTGRES_PASSWORD=<redacted>
POSTGRES_DB=alexa

# Straico
STRAICO_API_KEY=
STRAICO_API_BASE=https://api.straico.com
STRAICO_CHAT_PATH=/v2/chat/completions

# Perplexity Web Search
PERPLEXITY_API_KEY=
PERPLEXITY_API_BASE=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar
PERPLEXITY_TIMEOUT_MS=2600
PERPLEXITY_MAX_TOKENS=220
